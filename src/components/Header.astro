---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        <li><HeaderLink href="/projects">Projects</HeaderLink></li>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@algolia/algoliasearch-netlify-frontend@1/dist/algoliasearchNetlify.css" />
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@algolia/algoliasearch-netlify-frontend@1/dist/algoliasearchNetlify.js"></script>
        <script type="text/javascript">
          algoliasearchNetlify({
            appId: '0UO6MY6KCT',
            apiKey: '46103ee67a40c35263ae477622dffb45',
            siteId: '0df0372d-fac5-4317-8764-a5d32346df70',
            branch: 'main',
            selector: 'div#search',
          });
        </script>
        <li><HeaderLink><div id="search"></div></HeaderLink></li>


      </ul>

    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://github.com/flexdinesh/blogster"
    >
      <i
        class="fa-brands fa-github"
        aria-hidden="true"
        title="Blogster on GitHub"></i>
      <span class="fa-sr-only">Blogster on GitHub</span>
    </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://twitter.com/flexdinesh"
    >
      <i
        class="fa-brands fa-twitter"
        aria-hidden="true"
        title="Dinesh on Twitter"></i>
      <span class="fa-sr-only">Dinesh on Twitter</span>
    </a>
  </div>
  <DarkModeToggle />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
